<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.wufan.juice_java.mapper.UserMapper">
    <resultMap id="BaseResultMap" type="cn.wufan.juice_java.entity.User">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="superuser" property="superuser" jdbcType="INTEGER"/>
        <result column="username" property="username" jdbcType="VARCHAR"/>
        <result column="email" property="email" jdbcType="VARCHAR"/>
        <result column="status" property="status" jdbcType="INTEGER"/>
        <result column="created_at" property="createdAt" jdbcType="DATE"/>
        <result column="updated_at" property="updatedAt" jdbcType="DATE"/>
    </resultMap>

    <resultMap id="roleMap" type="cn.wufan.juice_java.entity.Role">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="status" property="status" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, password, salt, superuser, username, email, status, created_at, updated_at
    </sql>

    <insert id="save" parameterType="cn.wufan.juice_java.entity.User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO users
          (password, salt, superuser, username, email, status, created_at, updated_at)
        VALUES
          (#{password}, #{salt}, #{superuser}, #{username}, #{email}, #{status}, #{createdAt}, #{updatedAt})
    </insert>

    <select id="findAll" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM users
    </select>

    <select id="findUserById" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM users
        WHERE id = #{id}
    </select>

    <select id="findByUsername" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM users
        WHERE username = #{username}
    </select>


</mapper>